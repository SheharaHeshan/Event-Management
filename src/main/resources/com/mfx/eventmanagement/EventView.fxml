<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mfx.eventmanagement.MainFrame">
    <children>
        <HBox alignment="TOP_CENTER" spacing="10.0">
            <children>
                <MFXButton fx:id="CreateButton" buttonType="RAISED" onAction="#actionCreateButton" prefHeight="40.0" prefWidth="100.0" rippleColor="#a84040" text="Create Event" />
                <MFXButton fx:id="EditButton" buttonType="RAISED" lineSpacing="1.0" prefHeight="40.0" prefWidth="100.0" rippleColor="#d05959" text="Edit Event" />
                <MFXButton fx:id="PassShedule" buttonType="RAISED" onAction="#actionPassShedule" prefHeight="40.0" prefWidth="101.0" text="Schedule Event" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <ListView fx:id="eventListView" prefHeight="567.0" prefWidth="824.0" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
